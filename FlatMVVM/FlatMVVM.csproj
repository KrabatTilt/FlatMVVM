<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net45</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>TT.FlatMVVM.Wpf</PackageId>
    <Version>1.0.0</Version>
    <Authors>KrabatTilt</Authors>
    <PackageProjectUrl>https://github.com/KrabatTilt/FlatMVVM</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KrabatTilt/FlatMVVM</RepositoryUrl>
    <PackageTags>mvvm wpf</PackageTags>
    <Copyright>KrabatTilt</Copyright>
    <PackageLicenseUrl></PackageLicenseUrl>
    <Description>Simple MVVM framework for WPF applications</Description>
    <PackageReleaseNotes></PackageReleaseNotes>
    <RepositoryType>Git</RepositoryType>
    <PackageIconUrl />
    <Company>Tilt Technologies</Company>
    <AssemblyName>TT.FlatMVVM.Wpf</AssemblyName>
    <RootNamespace>TT.FlatMVVM.Wpf</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>FlatMVVM.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="FlatMVVM.v3.ncrunchproject" />
    <None Remove="FlatMVVM.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Expression.Blend.Sdk" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>